<p id="notice"><%= notice %></p>

<h1>Image Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Greenright</th>
      <th>Blueright</th>
      <th>Greenwrong</th>
      <th>Bluewrong</th>
      <th>Colorlesswrong</th>
      <th>Greenleft</th>
      <th>Blueleft</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_sessions.each do |image_session| %>
      <tr>
        <td><%= image_session.greenRight %></td>
        <td><%= image_session.blueRight %></td>
        <td><%= image_session.greenWrong %></td>
        <td><%= image_session.blueWrong %></td>
        <td><%= image_session.colorlessWrong %></td>
        <td><%= image_session.greenLeft %></td>
        <td><%= image_session.blueLeft %></td>
        <td><%= image_session.image_id %></td>
        <td><%= image_session.user_id %></td>
        <td><%= link_to 'Show', image_session %></td>
        <td><%= link_to 'Edit', edit_image_session_path(image_session) %></td>
        <td><%= link_to 'Destroy', image_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= button_to 'Create default Session', image_session_path %>


<div class="create-field">
<%= form_tag image_sessions_path, method: "post" do %>
<%= hidden_field_tag :user_id, current_user.id %>
<%= hidden_field_tag :image_id, 1 %>
<%= hidden_field_tag :greenRight, 0 %>
<%= hidden_field_tag :blueRight, 0 %>
<%= hidden_field_tag :greenWrong, 0 %>
<%= hidden_field_tag :blueWrong, 0 %>
<%= hidden_field_tag :colorlessWrong, 0 %>
<%= hidden_field_tag :greenLeft, 2 %>
<%= hidden_field_tag :blueLeft, 1 %>
<%= submit_tag("Create it!")%>
<%end%>
</div>

<%= link_to 'New Image Session', new_image_session_path %>
