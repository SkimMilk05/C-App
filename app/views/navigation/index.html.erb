<!-- Dashboard!  -->


<!--vertical nav bar-->
<div class="row">
  <div class="col-2">
    <div class="nav nav-pills bg-light" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Home</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Profile</a>
      <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Settings</a>
      <a class="nav-link" id="v-pills-logout-tab" data-toggle="pill" href="#v-pills-logout" role="tab" aria-controls="v-pills-logout" aria-selected="false">Log Out</a>
      <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/>
      <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/>
    </div>
  </div>

  <!--main page content -->
  <div class="col-8">

    <!--header-->
    <!----Top Navigation bar -->
    <nav class="navbar navbar-expand-sm bg-white navbar-light">
      <!-- Brand/logo -->
      <a class="navbar-brand">
       <%= image_tag("UVALogo.png", style: 'width:10%')%>
       Colscopy Education App </a>
    </nav>

    <!--rest of pages content-->
    <div class="tab-content" id="v-pills-tabContent">
      <br/>
      <!--home page-->
      <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
        <h2> Home Page -Dashboard </h2>
        <p> Welcome, <%= current_user.first_name %>! </p>
        <br/>
        <%= button_to "Practice", image_sets_path, method: :get %>
        <br/>
        <%= link_to "Glossary", 'glossary' %>
        <br/><br/>
        <%= button_to('Take Test', tests_path, params: {user_id: current_user.id, pre_test: true, questions_correct: 0 }, method: :post, class:'')%>

      </div>

      <!--profile page-->
      <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
        <h2>Profile and User Info</h2>
        Profile: <%= current_user.first_name + " " + current_user.last_name %>
        <br/>
        School: <%= current_user.school %>

      </div>

      <!--settings page-->
      <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
        <h2>Settings</h2>
          Name: <%= current_user.first_name + " " + current_user.last_name %> <br/>
          email: <%= current_user.email %> <br/>
          user since: <%= current_user.created_at %> <br/>

        <div>
          <h4>General</h4>
        </div>

        <div>
          <h4>Security and Login</h4>
        </div>

        <!--collaspable for password reset-->
        <div>
          <h5>
            Change Password
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#changePassword" aria-expanded="false" aria-controls="changePassword">
              Change
            </button>
          </h5>
          <div class="collapse" id="changePassword">
            <div class="card card-body">
              <div id="clearance" class="password-reset">
                <h3>Change Your Password</h3>

                <p>To be emailed a link to change your password, please enter your email address.</p>

                <%= form_for :password, url: passwords_path do |form| %>
                  <div class="text-field">
                    <%= form.label :email %>
                    <%= form.text_field :email, type: 'email' %>
                  </div>

                  <div class="submit-field">
                    <%= form.submit value="Submit"%>
                  </div>
                <% end %>

              </div>
            </div>
          </div>
        </div>
        </div>

        <!--Logut-->
        <div class="tab-pane fade" id="v-pills-logout" role="tabpanel" aria-labelledby="v-pills-logout-tab" onclick="logOutClicked()">
          <p>Are you sure you want to log out? </p>
          <p><%= button_to "Yes, Log Out", sign_out_path, method: :delete %></p>
        </div>

      </div>

      <!--footer-->

    </div>
  </div>
