<h1>Image Sets</h1>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

  <!-- first item must be active-->
  <div class="carousel-inner">
    <% @image_sets.shuffle.each do |image_set| %> <!-- shuffle function randomizes order -->
    <% if image_set == @image %>
    <div class="carousel-item active">
      <%= image_tag(image_set.images.first().img_url, class: 'd-block w-100') %>
      <%= link_to 'Select Image-set', image_set %>
      <%= count += 1 %>
    </div>

    <% else %>
    <!--rest of items-->
    <div class="carousel-item">
      <%= image_tag(image_set.images.first().img_url, class: 'd-block w-100') %>
      <%= link_to 'Select Image-set', image_set %>
    </div>
    <% end %>
    <%end %>
  </div>

  <!--controls-->
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div id="carousel" class="carousel slide" data-ride="false" data-interval="false" data-wrap="false">
  <div class="carousel-inner">
    <% @shuffled = @image_sets.shuffle %>
    <% @shuffled.each do |image_set| %>  <!-- shuffle function randomizes order -->
    <!-- first item must be active-->
    <% if image_set == @shuffled.first() %>
      <div class="carousel-item active">
        <%= image_tag(image_set.images.first().img_url, class: 'd-block w-100') %>
      </div>
    <%else%>
      <div class="carousel-item">
        <%= image_tag(image_set.images.first().img_url, class: 'd-block w-100') %>
      </div>
    <% end %> <!--end conditionals -->
    <% end %> <!-- end loop-->
  </div>

  <!--controls-->
  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



