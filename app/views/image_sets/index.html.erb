<p id="notice"><%= notice %></p>

<h1>Image Sets</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_sets.shuffle.each do |image_set| %>

        <!-- display the first image of the image-set-->
        <%= image_tag(image_set.images.first().img_url, style: 'width:50%') %>
        <%= link_to 'Select', image_set %>

    <% end %>

  <br/>  
  <%= link_to 'Back', root_path %>
  </tbody>
</table>
